<div class="container-fluid">
  <div class="row">
    <div class="col-lg">
      <h1 class="">Nuevo concesionario!</h1>
      <hr>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-4">
      
      <div class="input-group">
        <label>Nombre</label>
        {{input type="text" value=concess_name class="form-control"}}
      </div>
      <div class="input-group">
        <label>N° aprox de autos</label>
        {{input type="number" value=aproxNum class="form-control"}}
      </div>
      <div class="input-group">
        <label>Tipo de vehiculos</label>
        <select onchange={{action (mut type) value="target.value"}} class="form-control">
          <option value="x" selected>Selecciona un tipo de vehiculo</option>
          {{#each types as |typeChoice|}}
            <option value={{typeChoice}} selected={{if type typeChoice}}>{{typeChoice}}</option>
          {{/each}}
        </select>
      </div>
      <div class="input-group">
        <label for="warranty">Garantía</label>
        {{input type="checkbox" name="warranty" checked=warranty class="form-control"}} 
      </div>
      
      
    </div>
    <div class="col-lg-4">
      <div class="input-group">
        <label>Número de contacto</label>
        {{input type="text" value=contact class="form-control" aria-describedby="basic-addon1"}}
      </div>
      <div class="input-group">
        <label>Dirección</label>
        {{textarea value=address cols="30" rows="6" class="form-control"}}
      </div>
      

      

      
